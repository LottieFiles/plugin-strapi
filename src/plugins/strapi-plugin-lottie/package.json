{
  "name": "strapi-plugin-lottie",
  "version": "0.0.1",
  "description": "LottieFiles Strapi plugin",
  "strapi": {
    "name": "lottiefiles-for-strapi",
    "description": "This plugin provide free and an easy way to add Lottie animations to your Strapi app",
    "kind": "plugin",
    "displayName": "LottieFiles for Strapi"
  },
  "dependencies": {
    "@dotlottie/player-component": "1.3.2",
    "@lottiefiles/lottie-player": "1.7.1",
    "@lottiefiles/react-lottie-player": "^3.4.7",
    "@strapi/icons": "^1.3.1",
    "@urql/core": "^3.1.1",
    "graphql": "^16.6.0",
    "urql": "^3.0.3",
    "use-debounce": "^9.0.3"
  },
  "devDependencies": {
    "@changesets/cli": "^2.26.1",
    "@testing-library/jest-dom": "5.16.5",
    "@testing-library/react": "12",
    "@types/jest": "29.5.0",
    "babel-jest": "29.5.0",
    "jest": "29.5.0",
    "jest-canvas-mock": "2.5.0",
    "jest-environment-jsdom": "29.5.0",
    "jest-styled-components": "7.1.1",
    "ts-jest": "29.1.0",
    "typescript": "4.6.3",
    "wonka": "6.3.1"
  },
  "engines": {
    "node": ">=14.19.1 <=18.x.x",
    "npm": ">=6.0.0"
  },
  "scripts": {
    "develop": "tsc -w",
    "build": "tsc",
    "test": "jest --forceExit --detectOpenHandles --passWithNoTests --transformIgnorePatterns ",
    "test:coverage": "jest --coverage --watchAll",
    "release": "changeset publish"
  },
  "jest": {
    "resetMocks": false,
    "transform": {
      "^.+\\.(ts|tsx)$": "ts-jest"
    },
    "setupFiles": [
      "jest-canvas-mock"
    ],
    "testPathIgnorePatterns": [
      ".tmp",
      ".cache",
      "/node_modules/"
    ],
    "testEnvironment": "node"
  },
  "license": "MIT"
}
